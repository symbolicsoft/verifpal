attacker[active]

principal Alice[
	knows private a
	a_public = G^a
]
principal Bob[
	knows private b
	b_public = G^b
]

Alice -> Bob   : a_public
Bob   -> Alice : [b_public]

principal Alice[
	generates plaintext
	ss         = b_public^a
	key        = HASH(ss)
	ciphertext = ENC(key, plaintext)
	tag        = MAC(key, ciphertext)
]

Alice -> Bob : ciphertext, tag

principal Bob[
	ss_        = a_public^b
	key_       = HASH(ss_)
	tag_       = MAC(key_, ciphertext)
	_          = ASSERT(tag, tag_)?
	plaintext_ = DEC(key_, ciphertext)
]

queries[
	confidentiality? plaintext
	authentication? Alice -> Bob : ciphertext
]
