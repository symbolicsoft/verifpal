attacker[active]

principal Alice[]
principal Protonmail[]
principal Microsoft[]
principal Bob[]

principal Alice[
	knows private psk
	generates a
	generates m1
	ga = G^a
	em1 = AEAD_ENC(psk, m1, nil)
]

Alice -> Protonmail: ga, em1

Protonmail -> Microsoft: ga, em1

Microsoft -> Bob: ga, em1

principal Bob[
	knows private psk
	generates m2
	generates b
	gb = G^b
	gab = ga^b
	m1b = AEAD_DEC(psk, em1, nil)?
	em2 = AEAD_ENC(gab, m2, nil)
]

Bob -> Protonmail: em2, gb
Protonmail -> Alice: em2, gb

principal Alice[
	gba = gb^a
	m2a = AEAD_DEC(gba, em2, nil)?
]

queries[
	confidentiality? m1
	confidentiality? m2
]
